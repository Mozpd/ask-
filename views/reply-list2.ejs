<% all.forEach(function(reply,index){ %>
<div class="aw-item " id="<%= reply._id%>">
    <div class="mod-head" >
        <a class="anchor"></a>
        <a class="aw-user-img aw-border-radius-5 pull-right" href="/user/<%= reply.author.name%>">
            <img src="<%= reply.author.avatar%>">
        </a>
        <div class="title">
            <p>
                <a class="aw-user-name" href="/user/<%= reply.author.name%>"><%= reply.author.name%></a>
                <span style="font-size: 12px;color: #aaaaaa"> </span>
            </p>
        </div>
    </div>
    <div class="mod-body clearfix">
        <div class="markitup-box">
            <%- markdown(reply.content) %>
        </div>
    </div>
    <div class="mod-footer">
        <div class="meta clearfix">
            <span class="text-color-999 pull-right"><%= reply.create_time_ago() %></span>
            <span class="operate">
                        <a class="agree">
                            <i class="fa fa-thumbs-o-up"></i>
                            <b class="count">0</b>
                        </a>
                        <a class="disagree">
                            <i class="fa fa-thumbs-o-down"></i>
                        </a>
                    </span>
            <span class="operate">
                        <a class="aw-add-comment">
                            <i class="fa fa-commenting-o"></i>
                            <%= reply.comment_num%>条回复
                        </a>
                    </span>
        </div>
        <!--回复的DIV留在这里，二级回复-->
        <div class="aw-comment-box">
            <div class="aw-comment-list" style="border-bottom:0;">
                <div align="center" class="aw-padding10" style="border-bottom:1px solid #F5F5F5;">
                    <p>5条评论</p>
                </div>
                <div class="aw-item">
                    <div class="mod-head">
                        <a class="anchor"></a>
                        <a class="aw-user-img aw-border-radius-5 pull-right" href="#">
                            <img src="/images/avatar-max-img.png">
                        </a>
                        <div class="title">
                            <p>
                                <a class="aw-user-name" href="#">李志远</a>
                            </p>
                        </div>
                    </div>
                    <div class="mod-body clearfix">
                        <div class="markitup-box">
                            同求，请问楼主的问题解决了吗?
                        </div>
                    </div>
                    <div class="mod-footer">
                        <div class="meta clearfix">
                    <span class="text-color-999 pull-right">
                        <%= reply.create_time_ago() %>
                    </span>
                            <span class="operate">
                        <a class="agree">
                            <i class="fa fa-thumbs-o-up"></i>
                            <b class="count">0</b>
                        </a>
                        <a class="disagree">
                            <i class="fa fa-thumbs-o-down"></i>
                        </a>
                    </span>
                            <span class="operate">
                        <a class="aw-add-comment">
                            <i class="fa fa-comment"></i>
                            <%= reply.comment_num %>条评论
                        </a>
                    </span>
                        </div>
                        <!--二级回复的位置在这里-->
                        <% include public/comment-list %>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<% }) %>